<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/button_green_parent"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        app:cardCornerRadius="@dimen/button_corner_radius"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reaction_button_1_background">

            <RelativeLayout
                android:id="@+id/button_green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/button_title_1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold" />

            </RelativeLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_smooth_parent"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button_green_parent"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="@dimen/button_corner_radius"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reaction_button_2_background">

            <RelativeLayout
                android:id="@+id/button_smooth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/button_title_2"
                    android:textColor="@color/color_button_1"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold" />

            </RelativeLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_ghost_parent"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button_smooth_parent"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="@dimen/button_corner_radius"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reaction_button_3_background">

            <RelativeLayout
                android:id="@+id/button_ghost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/button_title_3"
                    android:textColor="@color/color_button_1"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold" />

            </RelativeLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_raised_parent"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/button_ghost_parent"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="@dimen/button_corner_radius"
        app:cardElevation="2dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reaction_button_4_background">

            <RelativeLayout
                android:id="@+id/button_raised"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/button_title_4"
                    android:textColor="@color/color_button_1"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold" />

            </RelativeLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>